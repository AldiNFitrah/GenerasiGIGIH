<div class="px-4 mt-4">
  <h3>Create New Category</h3>
  <form action="/category/create" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input required type="name" class="form-control" id="name" name="name" aria-describedby="nameHelp" autofocus>
      <div id="nameHelp" class="form-text">Give it a catchy name!</div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
