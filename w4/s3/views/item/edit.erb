<div class="px-4 mt-4">
  <h3>Edit Item: <%= item.name %></h3>
  <form action="/item/<%= item.id %>/update" method="post">
    <div class="row">
      <div class="mb-3 col">
        <label for="name" class="form-label">Name</label>
        <input required type="text" class="form-control" id="name" name="name" value="<%= item.name %>" aria-describedby="nameHelp" autofocus>
        <div id="nameHelp" class="form-text">Make sure it's memorable</div>
      </div>

      <div class="mb-3 col">
        <label for="price" class="form-label">Price</label>
        <input required type="number" min=0 class="form-control" id="price" name="price" value="<%= item.price %>" aria-describedby="priceHelp">
      </div>
    </div>

    <div class="row row-cols-4">
      <% categories.each do |category| %>
        <div class="form-check col">
          <input
            class="form-check-input"
            type="checkbox"
            value=<%= category.id %>
            id="category<%= category.id%>"
            name="category_ids[]"
            <% if item.category_ids.include?(category.id) %>
              checked
            <% end %>
          >
          <label
            class="form-check-label"
            for="category<%= category.id%>"
          >
            <%= category.name %>
          </label>
        </div>
      <% end %>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
