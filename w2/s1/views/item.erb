<style>
  * {
    font-family: 'Helvetica';
    margin: 0;
    padding: 0;
  }
  html {
    width: 50vw;
    margin: auto;
    background-color: bisque;
  }
  .container {
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 100vh;
    margin-top: 40vh;
  }
</style>
<div class="container">
  <div>
    <div>
      <form action="/item" method="POST">
        <p>item name: <input type="text" name="item_name" autofocus>
        <input type="submit" value="submit"></p>
      </form>
    </div>
    <div>
      <p>Registered Items</p>
      <ol>
      <% items.each do |item| %>
        <li><%= item %></li>
      <% end %>
      </ol>
    </div>
  </div>
</div>